
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/OperatorWeb/Views/Shared/_Layout.cshtml";
}
@section seccssOW{
    <link href="@Url.Content("~/Css/bootstrap-datetimepicker.css")" rel="stylesheet" />
}
<div class="container">
    <div class="row marginTop">
        <div class="col-md-12 col-xs-12">            
            <h4 class="box-title">Current Balance<span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;0.19</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-6 text-center">
            <div class="well well-sm">
                <h4 class="box-title">ACTIVE</h4>
                <h3>1</h3>
            </div>            
        </div>
        <div class="col-md-6 col-xs-6 text-center">
            <div class="well well-sm">
                <h4 class="box-title">INACTIVE</h4>
                <h3>0</h3>
            </div>            
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="fa fa-clock-o"></span>
                    </span>
                </div>
            </div>           
        </div>        
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><i class="fa fa-retweet" aria-hidden="true"></i>&nbsp;&nbsp;TOTAL BOOKINGS<span class="pull-right">0</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><i class="fa fa-rupee"></i>&nbsp;&nbsp;TOTAL EARNINGS<span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;0.00</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><i class="fa fa-briefcase" aria-hidden="true"></i>&nbsp;&nbsp;CASH COLLECTED<span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;0.00</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><i class="fa fa-university" aria-hidden="true"></i>&nbsp;&nbsp;NEFT<span class="pull-right"><i class="fa fa-rupee"></i>&nbsp;0.00</span></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><a href="#">VIEW EARNINGS</a></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><a href="#">VIEW CAR & DRIVER PERFORMANCE</a></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <h4 class="box-title"><a href="#">VIEW INCENTIVES</a></h4>
        </div>
    </div>
</div>
@section secscriptsOW{
    <script src="@Url.Content("~/Scripts/moment.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
}

