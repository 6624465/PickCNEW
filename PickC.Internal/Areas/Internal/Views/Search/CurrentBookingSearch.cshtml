@model PickC.Services.DTO.BookingDTO

@{
    ViewBag.Title = "CurrentBookingSearch";
    Layout = "~/Areas/Internal/Views/Shared/_Layout.cshtml";
}


<section class="content">
    @using (Html.BeginForm("CurrentBookingSearchData", "Search", FormMethod.Post))
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Customer Booking Search</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="control-label pull-right">Booking No</label>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.BookingNo, new { @class = "form-control" })
                            </div>
                            <div class="col-md-2">
                                <label class="control-label pull-right">Booking Date</label>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.BookingDate, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-2">
                                <label class="control-label pull-right">Customer Name</label>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
                            </div>
                            <div class="col-md-2">
                                <label class="control-label pull-right">Vehicle Number</label>
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(x => x.VehicleNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-md-2">
                                <label class="control-label pull-right">Vehicle Type</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DropDownListFor(x => x.VehicleType, new SelectList(Model.VehicleTypeList, "LookupId", "LookupDescription"), "", new { @class = "form-control" })
                            </div>
                            <div class="col-md-2">
                                <label class="control-label pull-right">Vehicle Group</label>
                            </div>
                            <div class="col-md-4">
                                @Html.DropDownListFor(x => x.VehicleGroup, new SelectList(Model.VehicleGroupList, "LookupId", "LookupDescription"), "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px;">
                            <div class="col-md-10"></div>
                            <div class="col-md-2">
                                <button class="btn-primary btn" type="submit"><i class="fa fa-search"></i>&nbsp; Search</button>
                            </div>
                        </div>
                    </div>
                 
                </div>
            </div>
        </div>
    }
</section>
@section secscripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#BookingDate').datepicker({
                defaultDate:''
            });
        });
    </script>
}

