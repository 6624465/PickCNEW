            $('#ddlSearchCustomerByStatus').on("change", function () {
                $.ajax({
                    url: '@Url.Content("~/Dashboard/GetCustomerBySearch")',
                    method: 'POST',
                    contentType: 'application/json',
                    dataType: 'json',
                    data: JSON.stringify({ 'status': $('#ddlSearchCustomerByStatus').val() }),
                    success: function (data) {
                        $('#CustomerList').val();
                        var html = '';
