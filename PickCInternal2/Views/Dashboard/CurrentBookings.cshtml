                                html += '<i class="fa fa-circle text-danger"></i>';
                            }
                            if (val.Status == 2) {
                                html += '<i class="fa fa-circle text-success"></i>';
                            }
                            if (val.Status == 3) {
                                html += '<i class="fa fa-circle text-warning"></i>';
                            }
                            html += '</span></li></ul>';
                        });

                        $('#CustomerList').html(html);


                    },
                    error: function (err) {

                    },
                    failure: function (fail) {

                    }
                });
            });
        });
            

